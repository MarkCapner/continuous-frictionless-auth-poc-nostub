+import { useEffect, useState } from "react";
+import { TrustHeader } from "../components/trust/TrustHeader";
+import { TrustTimeline } from "../components/trust/TrustTimeline";
+import { TrustBreakdown } from "../components/trust/TrustBreakdown";
+import { IdentityHistoryPanel } from "../components/identity/IdentityHistoryPanel";
+import { TechnicalToggle } from "../components/drilldown/TechnicalToggle";
+import { RawTelemetryPanel } from "../components/drilldown/RawTelemetryPanel";
+import { fetchLatestSession } from "../services/showcaseApi";
+
+export function ShowcaseSessionPage() {
+  const [session, setSession] = useState<any>();
+  const [showTech, setShowTech] = useState(false);
+
+  useEffect(() => {
+    fetchLatestSession().then(setSession);
+  }, []);
+
+  if (!session) return <div>Loading session…</div>;
+
+  return (
+    <div style={{ padding: 24, maxWidth: 1200, margin: "0 auto" }}>
+      <TrustHeader
+        score={session.trustScore}
+        decision={session.decision}
+        confidence={session.confidence}
+        summary={session.summary}
+      />
+
+      <TrustTimeline events={session.timelineEvents || []} />
+
+      <TrustBreakdown signals={session.signalBreakdown || []} />
+
+      <IdentityHistoryPanel identity={session.identity || {}} />
+
+      <TechnicalToggle
+        enabled={showTech}
+        onToggle={() => setShowTech(!showTech)}
+      />
+
+      {showTech && <RawTelemetryPanel telemetry={session.rawTelemetry} />}
+    </div>
+  );
+}
