+type Props = {
+  score: number;
+  decision: string;
+  confidence: "LOW" | "MEDIUM" | "HIGH";
+  summary: string;
+};
+
+export function TrustHeader({ score, decision, confidence, summary }: Props) {
+  const colour =
+    score > 75 ? "#2ecc71" : score > 45 ? "#f39c12" : "#e74c3c";
+
+  return (
+    <div
+      style={{
+        borderLeft: `6px solid ${colour}`,
+        padding: 20,
+        marginBottom: 24,
+        background: "#fafafa",
+        borderRadius: 6,
+      }}
+    >
+      <h2>Session Trust: {score}%</h2>
+      <strong>Decision: {decision}</strong>
+      <div>Confidence: {confidence}</div>
+      <p style={{ marginTop: 8, color: "#555" }}>{summary}</p>
+    </div>
+  );
+}
