+type TimelineEvent = {
+  timestamp: string;
+  label: string;
+  score?: number;
+};
+
+export function TrustTimeline({ events }: { events: TimelineEvent[] }) {
+  return (
+    <div style={{ marginBottom: 32 }}>
+      <h3>Session Timeline</h3>
+      <div style={{ display: "flex", gap: 16, overflowX: "auto" }}>
+        {events.map((e, i) => (
+          <div
+            key={i}
+            style={{
+              minWidth: 160,
+              padding: 12,
+              border: "1px solid #ddd",
+              borderRadius: 6,
+              background: "#fff",
+            }}
+          >
+            <small>{new Date(e.timestamp).toLocaleTimeString()}</small>
+            <div style={{ marginTop: 6 }}>{e.label}</div>
+            {e.score !== undefined && (
+              <div style={{ fontWeight: "bold" }}>{e.score}%</div>
+            )}
+          </div>
+        ))}
+      </div>
+    </div>
+  );
+}
