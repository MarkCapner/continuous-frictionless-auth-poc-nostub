# syntax=docker/dockerfile:1.4

############################
# Build stage
############################
FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /workspace

# Copy root pom
COPY pom.xml .

# Copy module poms (allows better caching)
COPY api/pom.xml api/pom.xml
COPY gateway/pom.xml gateway/pom.xml

# Frontend poms/config (if referenced by Maven or for completeness)
COPY showcase/package.json showcase/package.json
COPY showcase/tsconfig.json showcase/tsconfig.json
COPY showcase/vite.config.mts showcase/vite.config.mts

# Copy full source
COPY . .

# Build only the api module and its dependencies
RUN mvn -pl api -am package -DskipTests

############################
# Runtime stage
############################
FROM eclipse-temurin:21-jre
WORKDIR /app

# Copy the built JAR from the build stage
# Adjust pattern if your api artifactId produces a different jar name
COPY --from=build /workspace/api/target/*-SNAPSHOT.jar /app/app.jar

EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app/app.jar"]
